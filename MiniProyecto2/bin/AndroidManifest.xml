    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dinamico1"
            android:label="@string/title_activity_dinamico1" >
        </activity>
        <activity
            android:name=".Dinamico2"
            android:label="@string/title_activity_dinamico2" >
        </activity>
        <activity
            android:name=".Libre"
            android:label="@string/title_activity_libre" >
        </activity>
        <activity
            android:name=".Credito"
            android:label="@string/title_activity_credito" >
        </activity>
        <activity
            android:name=".CincoDatos"
            android:label="@string/title_activity_cinco_datos" >
        </activity>
    </application>

</manifest>
